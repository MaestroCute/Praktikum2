<Window x:Class="WrapPanel.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:WrapPanel"
		mc:Ignorable="d"
		Title="WrapPanel" Width="480" Height="360">
	<WrapPanel Orientation="Vertical">
		<TextBlock Margin="10" Padding="10" Background="PapayaWhip">TextBlock 1</TextBlock>
		<TextBlock Margin="10" Padding="10" Background="Gainsboro">TextBlock 2</TextBlock>
		<TextBlock Margin="10" Padding="10" Background="PaleVioletRed">TextBlock 3</TextBlock>
		<TextBlock Margin="10" Padding="10" Background="Turquoise">TextBlock 4</TextBlock>
		<TextBlock Margin="10" Padding="10" Background="PaleGoldenrod">TextBlock 5</TextBlock>
		<TextBlock Margin="10" Padding="10" Background="Pink">TextBlock 6</TextBlock>
		<TextBlock Margin="10" Padding="10" Background="Moccasin">TextBlock 7</TextBlock>
	</WrapPanel>
</Window>