<Window x:Class="DrawErase.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:DrawErase"
		mc:Ignorable="d"
		Title="Draw and Erase" Width="400" Height="350" MinWidth="400" MinHeight="350">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<CheckBox Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" Content="Erase mode" Grid.Row="0" Margin="10"/>
		<InkCanvas Name="inkCanvas" Grid.Row="1" Margin="10" Background="HotPink"/>
	</Grid>
</Window>